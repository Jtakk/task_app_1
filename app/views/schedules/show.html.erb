<h2>スケジュール詳細</h2>



<table>
  <tbody>
    <tr>
      <th>タイトル</th>
      <td><%= @schedule.title %></td>
    </tr>
    <tr>
      <th>開始日</th>
      <td><%= @schedule.start.strftime("%Y年%-m月%d日") %></td>
    </tr>
    <tr>
      <th>終了日</th>
      <td><%= @schedule.end.strftime("%Y年%-m月%d日") %></td>
    </tr>
    <tr>
      <th>終日</th>
      <td><%= signature(@schedule.all_day) %></td>
    </tr>
    <tr>
      <th>スケジュールメモ</th>
      <td><%= @schedule.memo %></td>
    </tr>
  </tbody>
</table>

<p><%= link_to "スケジュール一覧に戻る", schedules_path %></p>
<p><%= link_to "スケジュールを編集する", edit_schedule_path(@schedule) %></p>
<p><%= link_to "スケジュールを削除", @schedule, method: :delete, data: { confirm: "本当に削除しますか？" } %></p>